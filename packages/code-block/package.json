{
  "name": "@daren/code-block",
  "version": "3.0.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:darenmalfait/darenui.git",
    "directory": "packages/code-block"
  },
  "author": "Daren Malfait <me@daren.be> (https://daren.be)",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s 'build:*'",
    "build:esm": "cross-env BABEL_ENV=esm babel lib --root-mode upward --extensions .ts,.tsx,.js -d dist/esm --source-maps",
    "build:cjs": "cross-env BABEL_ENV=cjs babel lib --root-mode upward --extensions .ts,.tsx,.js -d dist/cjs --source-maps",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
    "clean": "rm -rf node_modules && rm -rf dist",
    "lint": "run-p 'lint:*'",
    "lint:lib": "eslint lib --ext .ts,.tsx --config ../../.eslintrc.js",
    "lint:types": "tsc --noEmit",
    "dev": "nodemon --watch lib --exec yarn build -e ts,tsx",
    "prebuild": "rimraf dist",
    "test": "jest --env=jsdom --passWithNoTests",
    "test:cov": "yarn test --coverage",
    "version": "yarn build"
  },
  "devDependencies": {
    "react": "^18.2.0"
  },
  "peerDependencies": {
    "react": ">=18.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@daren/utils": "^1.9.0",
    "@heroicons/react": "^2.0.13",
    "prism-react-renderer": "^1.3.5"
  }
}
