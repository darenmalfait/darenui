{
  "name": "darenui",
  "private": true,
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/darenmalfait/darenui.git"
  },
  "author": "Daren Malfait",
  "main": "index.js",
  "workspaces": {
    "packages": [
      "packages/*",
      "docs"
    ]
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean && rm -rf node_modules",
    "create:pkg": "node --loader ts-node/esm scripts/plopfile.ts",
    "dev": "yarn docs dev",
    "docs": "yarn workspace @daren/docs",
    "docs:dev": "yarn docs dev",
    "docs:start": "yarn docs start",
    "generate:css:watch": "npx tailwindcss build -i styles/styles.css -o styles/styles.output.css --watch",
    "generate:css": "npx tailwindcss build -i styles/styles.css -o styles/styles.output.css",
    "lint:lib": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:types": "tsc --noEmit",
    "preinstall": "npx only-allow yarn",
    "prepare": "husky install",
    "publish:ci": "lerna publish from-package --yes --no-verify-access",
    "validate": "run-p 'lint:*'",
    "version:ci": "lerna version --yes --conventional-commits --conventional-graduate=* --create-release github --message 'chore(release): publish'"
  },
  "dependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@heroicons/react": "^2.0.12",
    "@ryanflorence/md": "^7.2.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.7",
    "@types/react-dom": "^18.0.6",
    "@types/react": "^18.0.21",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint-config-daren": "^3.5.1",
    "eslint": "^8.25.0",
    "husky": "^8.0.1",
    "match-sorter": "^6.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react-dom": "^18.2.0",
    "react": "^18.2.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/eslint-plugin": "^7.19.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/runtime": "^7.19.4",
    "@types/lodash": "^4.14.186",
    "@types/shelljs": "^0.8.11",
    "autoprefixer": "^10.4.12",
    "babel-loader": "^8.2.5",
    "cross-env": "^7.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fast-glob": "^3.2.12",
    "lerna": "^5.6.2",
    "lodash": "^4.17.21",
    "plop": "^2.7.6",
    "postcss": "^8.4.17",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "postcss-loader": "^7.0.1",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.1",
    "webpack": "^5.74.0"
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@3.2.3"
}
