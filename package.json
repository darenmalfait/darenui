{
  "name": "@daren/darenui",
  "private": true,
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/darenmalfait/darenui.git"
  },
  "author": "Daren Malfait <me@daren.be> (https://daren.be)",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "docs"
    ]
  },
  "scripts": {
    "build": "lerna run build --ignore @daren/docs",
    "clean": "lerna run clean && rm -rf node_modules",
    "create:pkg": "node --loader ts-node/esm scripts/plopfile.ts",
    "dev": "yarn docs dev",
    "docs:build": "yarn docs build",
    "docs:dev": "yarn docs dev",
    "docs:start": "yarn docs start",
    "docs": "yarn workspace @daren/docs",
    "generate:css:watch": "npx tailwindcss build -i styles/styles.css -o styles/styles.output.css --watch",
    "generate:css": "npx tailwindcss build -i styles/styles.css -o styles/styles.output.css",
    "lint:lib": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:types": "tsc --noEmit",
    "preinstall": "npx only-allow yarn",
    "prepare": "husky install",
    "publish:ci": "lerna publish from-package --yes",
    "validate": "run-p 'lint:*'",
    "version:ci": "lerna version --yes --conventional-commits --conventional-graduate=* --create-release github --message 'chore(release): publish'"
  },
  "dependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@heroicons/react": "^2.0.13",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.8",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-config-daren": "^3.7.1",
    "husky": "^8.0.2",
    "match-sorter": "^6.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/eslint-plugin": "^7.19.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/runtime": "^7.20.6",
    "@types/lodash": "^4.14.191",
    "@types/shelljs": "^0.8.11",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.0",
    "cross-env": "^7.0.3",
    "danger": "^11.2.0",
    "dotenv": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fast-glob": "^3.2.12",
    "lerna": "^6.1.0",
    "lodash": "^4.17.21",
    "node-plop": "^0.31.0",
    "nodemon": "^2.0.20",
    "plop": "^3.0.0",
    "postcss": "^8.4.20",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.0.2",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.1",
    "webpack": "^5.75.0"
  },
  "packageManager": "yarn@3.2.3",
  "engines": {
    "node": ">=14"
  }
}
